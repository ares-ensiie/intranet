.container
  .row
    .page-header
      %h1
        = link_to "←", gallery_root_path
        = @album.name
        &nbsp; 
        - if @album.author.eql?(current_user)
          = link_to "Éditer", edit_gallery_album_path(@album)

    - if !@album.desc.empty?
      .span9
        %h2 Description
        %p.album_desc=@album.desc
  .row
    - if !@album.photos.empty?
      #gallery{ "data-toggle" => "modal-gallery", "data-target" => "#modal-gallery"}
        - @album.photos.each do |p|
          = link_to (image_tag p.photo.url(:thumb)), p.photo.url , :rel => "gallery", :title => p.name

= render 'gallery/albums/modal' 
= javascript_include_tag "albums"
